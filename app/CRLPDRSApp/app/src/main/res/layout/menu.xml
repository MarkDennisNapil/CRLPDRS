<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#2196F3"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Car License and Plate Detection and Recognition System"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#000000"/>
			</LinearLayout>
			<ImageView
				android:id="@+id/imsettings"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:padding="15dp"
				android:src="@drawable/settingsicon"
				android:scaleType="fitXY"
				android:layout_gravity="right"/>
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imscanplatenum"
				android:layout_width="300dp"
				android:layout_height="300dp"
				android:layout_marginTop="20dp"
				android:padding="15dp"
				android:src="@drawable/platenumscan"
				app:civ_border_width="3dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true"/>
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imreport"
				android:layout_width="300dp"
				android:layout_height="300dp"
				android:layout_marginTop="20dp"
				android:paddingTop="30dp"
				android:src="@drawable/myvehicle"
				app:civ_border_width="3dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true"/>
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imloststolen"
				android:layout_width="300dp"
				android:layout_height="300dp"
				android:layout_marginTop="20dp"
				android:src="@drawable/loststolencar"
				app:civ_border_width="3dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true"/>
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imsafetyinfo"
				android:layout_width="300dp"
				android:layout_height="300dp"
				android:layout_marginTop="20dp"
				android:src="@drawable/safetyinfo"
				app:civ_border_width="3dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
